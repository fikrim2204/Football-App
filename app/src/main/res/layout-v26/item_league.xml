<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="76dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_league"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_logo_league"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:contentDescription="@string/league_image"
                tools:src="@drawable/english_league_1" />

            <TextView
                android:id="@+id/text_name_league"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/image_logo_league"
                android:textAlignment="center"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="League" />

            <TextView
                android:id="@+id/text_desc_league"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name_league"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/image_logo_league"
                android:justificationMode="inter_word"
                android:maxLines="4"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Lorem Lorel lorea wadawd awdawda dwadawd awdawda wadawda awdawda awdawda awdad awdawda awdawda awdawda awdawdaw awdawd " />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>