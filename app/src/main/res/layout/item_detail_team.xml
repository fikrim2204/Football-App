<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar_detail_team"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="85dp"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar_detail_team">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_detail_team_badge"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/image_team"
            android:scaleType="fitXY"
            tools:src="@drawable/english_league_1" />

        <TextView
            android:id="@+id/tv_detail_team_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_detail_team_badge"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Liverpool" />

        <TextView
            android:id="@+id/tv_detail_alternate_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_detail_team_name"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="15sp"
            tools:text="Afc, Gunner" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>