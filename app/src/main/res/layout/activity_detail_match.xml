<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.DetailLeagueActivity">

    <ProgressBar
        android:id="@+id/progressBarDetailLeague"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <ImageView
        android:id="@+id/image_logo_league"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        tools:src="@drawable/english_league_1" />

    <TextView
        android:id="@+id/text_league"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_logo_league"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="League" />

    <TextView
        android:id="@+id/text_desc_league"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_league"
        android:padding="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Lorem Lorel lorea wadawd awdawda dwadawd awdawda wadawda awdawda awdawda awdad awdawda awdawda awdawda awdawdaw awdawd " />
</RelativeLayout>