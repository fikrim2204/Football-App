<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_previous_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/team_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/score_home"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/textColor"
                tools:text="LiverPool" />

            <TextView
                android:id="@+id/score_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/strip"
                android:padding="2dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                tools:text="0" />

            <TextView
                android:id="@+id/strip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/strip"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/score_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/strip"
                android:padding="2dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                tools:text="0" />

            <TextView
                android:id="@+id/team_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/score_away"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/textColor"
                tools:text="Man United" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/strip"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                tools:text="20-04-2019" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>