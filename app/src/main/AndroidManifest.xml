<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rpl1pnp.fikri.footballapps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.detailteam.DetailTeamActivity"
            android:label="@string/title_activity_detail_team"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.favorite.FavoriteActivity"
            android:label="@string/favorites"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.detailmatch.DetailMatchActivity"
            android:label="@string/detail_match"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.detailleague.DetailLeagueActivity"
            android:label="@string/league_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.league.LeagueActivity"
            android:label="@string/league"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>